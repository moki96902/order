<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/order"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/img"
        android:layout_marginTop="40dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="MissingConstraints" />

    <ImageView
        android:id="@+id/cancel_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/button"
        android:layout_marginBottom="12dp"
        android:layout_marginEnd="12dp"
        app:layout_constraintBottom_toBottomOf="@id/order"
        app:layout_constraintEnd_toEndOf="@id/order"
        />

    <ImageView
        android:id="@+id/check_mark"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/img1"
        android:layout_marginTop="36dp"
        android:layout_marginStart="0dp"
        app:layout_constraintTop_toTopOf="@id/order"
        app:layout_constraintStart_toStartOf="@id/order"
        app:layout_constraintEnd_toEndOf="@id/order"/>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/text"
       android:layout_marginBottom="0dp"
       android:layout_marginTop="40dp"
        app:layout_constraintTop_toTopOf="@id/check_mark"
        app:layout_constraintBottom_toBottomOf="@id/cancel_button"
        app:layout_constraintStart_toStartOf="@id/order"
        app:layout_constraintEnd_toEndOf="@id/order"/>

</androidx.constraintlayout.widget.ConstraintLayout>